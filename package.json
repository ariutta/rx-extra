{
  "name": "rx-extra",
  "version": "1.0.2",
  "description": "rx-extra contains additional functionality not contained in the rx package, such as \"splitOnChange\".",
  "main": "index.js",
  "main:esnext": "lib-esnext/main.js",
  "scripts": {
    "compile": "npm-run-all compile:*",
    "compile:es5": "rm -rf lib-es5 && cp -r src/ lib-es5 && tsc lib-es5/*.ts --pretty --sourceMap --module commonjs --moduleResolution node --target ES5 && rm -rf lib-es5/*.ts && rm -rf lib && mv lib-es5/ lib && echo ok || echo not ok",
    "compile:esnext": "rm -rf lib-esnext && mkdir lib-esnext && tsc src/*.ts --pretty --sourceMap --module commonjs --target ES2015 --outDir lib-esnext && echo ok || echo not ok",
    "test": "mocha test/spec/api.js --reporter min --colors && echo ok || echo not ok",
    "watch": "npm-watch"
  },
  "watch": {
    "compile:es5": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,tsx,json",
      "quiet": true
    },
    "test": {
      "patterns": [
        "lib",
        "test"
      ],
      "extensions": "js,jsx,json",
      "quiet": true
    }
  },
  "browser": {},
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ariutta/rx-extra.git"
  },
  "keywords": [
    "rx",
    "rxjs",
    "observable"
  ],
  "author": "Anders Riutta",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ariutta/rx-extra/issues"
  },
  "homepage": "https://github.com/ariutta/rx-extra#readme",
  "dependencies": {
    "@types/es6-promise": "0.0.32",
    "@types/lodash": "^4.14.36",
    "@types/node": "^6.0.41",
    "lodash": "^4.16.2",
    "rx-node": "^1.0.1",
    "rxjs": "^5.0.0-beta.12"
  },
  "devDependencies": {
    "browserify": "^13.1.0",
    "chai": "^3.5.0",
    "csv-streamify": "^3.0.3",
    "highland": "^2.10.0",
    "jsonstream": "^1.0.3",
    "loggin": "^3.0.1",
    "mkdirp": "^0.5.1",
    "mocha": "^3.1.0",
    "npm-run-all": "^3.1.0",
    "npm-watch": "^0.1.6",
    "sinon": "^1.17.6",
    "throttled-transform-stream": "^1.0.0",
    "through": "^2.3.8",
    "through2": "^2.0.1",
    "to-transform": "^1.0.1",
    "tsify": "^1.0.7",
    "typescript": "^2.0.3"
  },
  "semverBumper": {
    "jsonFiles": [
      {
        "filepath": "package.json",
        "key": "version"
      }
    ],
    "grepOptions": {
      "include": [],
      "exclude": [],
      "excludeDir": [
        "./docs",
        "./test",
        "./bower_components",
        "./lib"
      ]
    }
  }
}
