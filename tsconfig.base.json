{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "pretty": true
  },
  "include": [
    "index.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "tmp/**/*"
  ]
}
